{
  "name": "just-to-do",
  "version": "1.0.0",
  "description": "就是去做",
  "main": ".eslintrc.js",
  "scripts": {
    "build": "npm run build:js && npm run build:css",
    "build:js": "browserify ./src/scripts/main.js -o ./dist/scripts/bundle.js",
    "postbuild:js": "npm run uglifyjs",
    "uglifyjs": "uglifyjs ./dist/scripts/bundle.js -m -c -o ./dist/scripts/bundle.min.js",
    "postuglifyjs": "npm run sourcemap",
    "sourcemap": "uglifyjs ./dist/scripts/bundle.js -o ./dist/scripts/bundle.min.js --source-map",
    "build:css": "npm run postcss-cli",
    "postcss-cli": "postcss ./src/styles/*.css --r",
    "postbuild:css": "npm run cleancss",
    "cleancss": "cleancss -o ./dist/styles/basic.min.css ./src/styles/basic.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RayJune/JustToDo.git"
  },
  "author": "RayJune",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/RayJune/JustToDo/issues"
  },
  "homepage": "https://github.com/RayJune/JustToDo#readme",
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "browserify": "^14.4.0",
    "clean-css-cli": "^4.1.10",
    "eslint": "^4.6.1",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-config-airbnb-es5": "^1.2.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-react": "^7.3.0",
    "postcss-cli": "^4.1.1",
    "uglify-js": "^3.1.3"
  },
  "dependencies": {
    "indexeddb-crud": "^1.2.0"
  }
}
