{
  "name": "just-to-do",
  "version": "1.0.0",
  "description": "就是去做",
  "main": ".eslintrc.js",
  "scripts": {
    "build": "npm run build:scripts && npm run build:styles",
    "clean": "rm -rf dist/**/*",
    "prebuild": "npm run clean",
    "prebuild:scripts": "browserify ./src/scripts/main.js -o ./dist/scripts/bundle.js --debug",
    "build:scripts": "uglifyjs ./dist/scripts/bundle.js -m -c -o ./dist/scripts/bundle.min.js",
    "prebuild:styles": "postcss src/styles/*.css --use autoprefixer -r --no-map",
    "build:styles": "cleancss -o ./dist/styles/main.min.css ./src/styles/main.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RayJune/JustToDo.git"
  },
  "author": "RayJune",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/RayJune/JustToDo/issues"
  },
  "homepage": "https://github.com/RayJune/JustToDo#readme",
  "devDependencies": {
    "autoprefixer": "^7.2.3",
    "babel-eslint": "^7.2.3",
    "browserify": "^14.4.0",
    "clean-css-cli": "^4.1.10",
    "eslint": "^4.13.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-airbnb-es5": "^1.2.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-react": "^7.3.0",
    "postcss-cli": "^4.1.1",
    "uglify-js": "^3.2.2"
  },
  "dependencies": {
    "indexeddb-crud": "^3.1.0",
    "normalize.css": "^7.0.0"
  }
}
